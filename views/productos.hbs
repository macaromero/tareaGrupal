<h1 class="text-center mt-5">Productos</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <table class="table table-hover text-center">
                <thead>
                    <th>ID</th>
                    <th>Nombre del producto</th>
                    <th>Precio</th>
                    <th>Descripción</th>
                    <th>Ver más</th>
                </thead>
                <tbody>
                    {{#each productos}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{nombre}}</td>
                        <td>${{precio}}</td>
                        <td>{{descripcion}}</td>
                        <td><a class="btn btn-link" href="/productos/{{id}}">Ver más</a></td>
                    </tr>
                    {{/each}}
                </tbody>
                
            </table>
        </div>
    </div>
</div>