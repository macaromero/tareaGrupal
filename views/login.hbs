<h1 class="text-center mt-5">Ingresá a tu cuenta</h1>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-7">
            <form action="/login/ingreso" method="POST">
                <div class="form-group">
                    <label for="username">Nombre de usuario <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" placeholder="Ingresá tu nombre de usuario" required name="username" id="username">
                </div>
                <div class="form-group">
                    <label for="email">Correo electrónico <span class="text-danger">*</span></label>
                    <input type="email" class="form-control" placeholder="Ingresá tu correo electrónico" required name="email" id="email">
                </div>
                <div class="form-group">
                    <label for="password">Contraseña <span class="text-danger">*</span></label>
                    <input type="password" class="form-control" placeholder="Ingresá tu contraseña" required name="password" id="password">
                </div>
                <button class="btn btn-primary btn-block">Ingresar</button>                                
            </form>
        </div>
    </div>
</div>